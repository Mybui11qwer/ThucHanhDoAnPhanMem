
@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        body {
            background-color: #CCCCCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        #container {
            border: 10px solid #999999;
            width: 760px;
            background-color: #999999;
            margin: 0px auto;
        }

        #banner {
            background-color: #EFEFEF;
            height: 200px;
        }

            #banner img {
                width: 100%;
                height: 200px;
            }

        #navigator {
            background-color: #999999;
            padding: 5px 0px;
            border-top: 2px solid black;
            border-bottom: 2px solid black;
        }

        #sidebar {
            width: 200px;
            float: left;
        }

        #content {
            margin-left: 200px;
            min-height: 400px;
            border-left: 2px solid black;
            background-color: #FFFFFF;
        }

        #footer {
            background-color: #999999;
            border-top: 2px solid black;
            text-align: center;
            padding: 5px 0px;
        }
    </style>
</head>

<body>
    <div id="container">
        <div id="banner">
            <img src="~/Hinh/banner.jpg" />
        </div>
        <div id="navigator">
            <form action="~/Home/TimKiemSach">
                <input type="text" name="tensach" />
                <input type="submit" />
            </form>
        </div>
        <div id="sidebar">
            <form action="~/Sach/ThemSachMoi" method="post">
                Tên sách:<input type="text" name="tensach" /><br />
                Đơn giá :<input type="text" name="dongia" /><br />
                Mô tả :<textarea name="mota"></textarea><br />
                Hình minh họa: <input type="file" name="hinhminhhoa" /><br />
                Mã chủ đề:<select name="machude">

                    @foreach (var b in ViewBag.listCD)
                    {
                        <option value="@b[0]">@b[1]</option>
                    }
                </select><br />
                Mã nhà xuất bản: <select name="manhaxuatban">

                    @foreach (var c in ViewBag.listNXB)
                    {
                        <option value="@c[0]">@c[1]</option>
                    }
                </select><br /><br />
                <input type="submit" value="Thêm sách" />
            </form>
        </div>
        <div>
            <div id="content">
                <table border="1">
                    <tr>
                        <tH>MaSach</tH>
                        <th>TenSach</th>
                        <th>Gia</th>
                    </tr>
                    @foreach (var a in ViewBag.list)
                    {
                        <tr>
                            <td>@a[0]</td>
                            <td>
                                <a href="~/Home/ChiTietSach?id=@a[0]">
                                    @a[1]
                                </a>
                            </td>
                            <td>@a[3]</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div id="footer">
            FOOTER
        </div>
    </div>
</body>
