
@{
    ViewBag.Title = "Vietsach";
}

<h2>Vietsach</h2>
<html>
<head>
    <style>
        body {
            background-color: #CCCCCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        #container {
            border: 2px solid #000000;
            width: 760px;
            background-color: #ccc;
            margin: 0px auto;
        }

        #banner {
            background-color: #EFEFEF;
            height: 100px;
        }

        #navigator {
            background-color: #999999;
            padding: 5px 0px;
            border-top: 2px solid black;
            border-bottom: 2px solid black;
        }

        #sidebar {
            width: 160px;
            float: left;
        }

        #content {
            margin-left: 160px;
            min-height: 400px;
            border-left: 2px solid black;
            background-color: #FFFFFF;
        }

        #footer {
            background-color: #999999;
            border-top: 2px solid black;
            text-align: center;
            padding: 5px 0px;
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="banner">
            BANNER
        </div>
        <div id="navigator">
            NAVIGATOR
        </div>
        <div id="sidebar">
            SIDEBAR
        </div>
        <div id="content">
            <table border="1">
                <tr>
                    <tH>MaSach</tH>
                    <th>TenSach</th>
                    <th>Gia</th>
                </tr>
                @foreach (var a in ViewBag.list)
                {
                    <tr>
                        <td>@a[0]</td>
                        <td>@a[1]</td>
                        <td>@a[3]</td>
                    </tr>
                }
            </table>

        </div>
        <div id="footer">
            FOOTER
        </div>
    </div>
</body>
</html>

