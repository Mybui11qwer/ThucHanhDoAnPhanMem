<html>
<head>
    <h1>TimKiemTenSach</h1>
    <style>
        body {
            background-color: #CCCCCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        #container {
            border: 10px solid #999999;
            width: 760px;
            background-color: #999999;
            margin: 0px auto;
        }

        #banner {
            background-color: #EFEFEF;
            height: 100px;
        }

        #navigator {
            background-color: #999999;
            padding: 5px 0px;
            border-top: 2px solid black;
            border-bottom: 2px solid black;
        }

        #sidebar {
            width: 160px;
            float: left;
        }

        #content {
            margin-left: 160px;
            min-height: 400px;
            border-left: 2px solid black;
            background-color: #FFFFFF;
        }

        #footer {
            background-color: #999999;
            border-top: 2px solid black;
            text-align: center;
            padding: 5px 0px;
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="banner">
            BANNER
        </div>
        <div id="navigator">
            <form action="~/Home/ChiTietSach">

                <input type="text" name="id" />

                <input type="submit" />

            </form>
        </div>
        <div id="sidebar">
            SIDEBAR
        </div>
        <div id="content">

            <table border="1">

                <tr>

                    <td colspan="2">

                        <img src="~/Hinh/@ViewBag.list[0][5]" />

                    </td>

                </tr>

                <tr>

                    <td>

                        @ViewBag.list[0][1]

                    </td>

                    <td>

                        @ViewBag.list[0][3]

                    </td>

                </tr>

            </table>

        </div>
        <div id="footer">
            FOOTER
        </div>
    </div>
</body>
</html>